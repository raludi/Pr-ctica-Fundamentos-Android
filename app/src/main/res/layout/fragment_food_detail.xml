<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".fragments.FoodDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryLigth">

        <ImageView
            android:id="@+id/food_detail_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:src="@drawable/salad" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_fish_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/allergen_fish_no"/>
            <ImageView
                android:id="@+id/image_shellfish_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/allergen_shellfish_no"/>
            <ImageView
                android:id="@+id/image_celery_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/allergen_celery_no"/>
            <ImageView
                android:id="@+id/image_egg_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/allergen_egg_no"/>
            <ImageView
                android:id="@+id/image_gluten_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/allergen_gluten_no"/>
            <ImageView
                android:id="@+id/image_milk_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/allergen_milk_no"/>
        </LinearLayout>
        <TextView
            android:id="@+id/food_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ensalada"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/food_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Description about the dish"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:id="@+id/food_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="10dp"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_plus"
        android:layout_margin="20dp"
        />
</android.support.v7.widget.CardView>
